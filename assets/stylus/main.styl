fondo = #e8d9c6
footer = #f2ebe1
cafe = #614e40

.bold
	font-weight 700
.m-top-40
	margin-top 40px
.m-bottom-20
	margin-top 20px
.m-bottom-40
	margin-top 40px
	
body
	background fondo
	font-family 'Alegreya', serif
	color cafe

#masthead
	background footer
.navbar
	background footer
.navbar-brand
	width 120px
	img
		width 100%
		height auto
		display block
.navbar-toggler
	padding 4px 0
	border none
	width 30px
	height auto
	display inline-block
	.navbar-toggler-line
		width 100%
		height 4px
		margin 4px 0
		background cafe
		display block
	&:active
		outline none
.navbar-nav
	.nav-link
		color cafe
		text-align center
.main-banners-container
	height 320px
	display block
	width 100%
p.intro
	padding 30px 20px
.site-content
	padding-top 30px
.categories-block
	background transparent url(./assets/images/textura-general.png) repeat center center
	width 100%
	padding 10px 0
	.category-item
		margin 30px 0
		position relative
		.cat-banner
			background purple
			height 125px
			width 80%
			margin 0 auto
			border-radius 4px
			&.catalogo
				background url(./assets/images/banner-catalogo.jpg) no-repeat center center
				background-size cover
			&.proyectos
				background url(./assets/images/banner-proyectos.jpg) no-repeat center center
				background-size cover
			&.blog
				background url(./assets/images/banner-blog.jpg) no-repeat center center
				background-size cover
		.cat-info
			text-align center
			position absolute
			width 100%
			top 30px
			a
				color white
			.icon-mas
				font-size 1.8em
.site-footer
	background footer
	margin-top 50px
	a
		color cafe
		transition color .5s ease
		&:hover
			color rgba(cafe, .7)
			transition color .5s ease
	.logo-colarte-footer
		width 100px
		display inline-block
		height auto
		margin 30px auto
	.col-footer
		margin 30px 0
	.social-stuff
		margin 0
		padding 0
		li
			display inline-block
			margin 0 4px
			a
				font-size 2em
@media screen and (min-width: 768px)
	.middle-align
		display flex
		align-items center
	.col-footer
		p
			font-size .9em
		h2
		h4
			font-size 1em
			font-weight 700
@media screen and (min-width: 992px)
	.skip-link.screen-reader-text
		display none
	#masthead
		background footer
		width 100%
		overflow hidden
		position fixed
		top 0
		height 56px
	.navbar.navbar-expand-md
		width 920px
		margin 0 auto